{
    "name": "mcrm/laravel-connection-storage",
    "version": "0.1.0",
    "description": "Flexible Laravel package for managing external database connections with Redis cache and HTTP API fallback. Supports customizable DTOs and multiple connection types for microservices architecture.",
    "type": "library",
    "keywords": [
        "laravel",
        "database",
        "connections",
        "redis",
        "cache",
        "microservices",
        "dto"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "MCRM Development Team",
            "email": "dev@mcrm.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "illuminate/support": "^10.0|^11.0",
        "illuminate/cache": "^10.0|^11.0",
        "illuminate/http": "^10.0|^11.0",
        "illuminate/log": "^10.0|^11.0",
        "illuminate/config": "^10.0|^11.0"
    },
    "autoload": {
        "psr-4": {
            "Mcrm\\LaravelConnectionStorage\\": "src/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Mcrm\\LaravelConnectionStorage\\ConnectionStorageServiceProvider"
            ]
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
